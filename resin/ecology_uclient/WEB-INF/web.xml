<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">  
<web-app>
	<session-config>
	   <session-timeout>420</session-timeout>
	</session-config>
	<filter>
	      <filter-name>EncodingFilter</filter-name>
	      <filter-class>com.weaver.filter.EncodingFilter</filter-class>
	      <init-param>
	         <param-name>ak</param-name>
	          <param-value>UTF-8</param-value>
	      </init-param>
	</filter>
	<filter-mapping>
	       <filter-name>EncodingFilter</filter-name>
	       <url-pattern>*</url-pattern>
	</filter-mapping>
 <servlet>
        <servlet-name>InitServer</servlet-name>
        <servlet-class>com.weaver.general.InitServer</servlet-class>
        <init-param>
         <param-name>serverName</param-name>
         <param-value>umecology</param-value>
       </init-param>
	   <load-on-startup>1</load-on-startup>
 </servlet>
 <servlet>
    <servlet-name>action</servlet-name>
    <servlet-class>org.apache.struts.action.ActionServlet</servlet-class>
    <init-param>
      <param-name>config</param-name>
      <param-value>/WEB-INF/struts-config.xml</param-value>
    </init-param>
    <load-on-startup>2</load-on-startup>
 </servlet>
  <servlet-mapping>
    <servlet-name>action</servlet-name>
    <url-pattern>*.do</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>
